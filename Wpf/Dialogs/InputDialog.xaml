<Window
    x:Class="NavisDataExtraction.Wpf.Dialogs.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NavisDataExtraction.Wpf.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    MaxWidth="270"
    Height="Auto"
    MaxHeight="180"
    mc:Ignorable="d">
    <Grid Height="Auto" Width="Auto">
        <StackPanel>
            <TextBlock x:Name="MessageTextBlock" Height="Auto" />
            <TextBox x:Name="Input" Height="Auto" />
            <Button
                Height="Auto"
                Click="Button_Click"
                Content="Ok" />
        </StackPanel>
    </Grid>
</Window>