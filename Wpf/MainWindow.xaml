<Window
    x:Class="NavisDataExtraction.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NavisDataExtraction.Wpf.ViewModels"
    xmlns:views="clr-namespace:NavisDataExtraction.Wpf.Views"
    Title="PMG Data extraction tool"
    Width="450"
    Height="Auto"
    MinWidth="450"
    MinHeight="90"
    d:DesignHeight="750"
    d:DesignWidth="450"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate x:Name="extractionViewTemplate" DataType="{x:Type viewmodels:ExtractionViewModel}">
            <views:ExtractionView DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Name="configViewTemplate" DataType="{x:Type viewmodels:ConfigViewModel}">
            <views:ConfigView DataContext="{Binding}" />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Margin>9</Grid.Margin>


        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image Height="30" Source="/NavisDataExtraction.PMPK;component/Resources/PMG-Logo.jpg" />
            <Label
                Content="Data extraction tool"
                FontSize="18"
                FontWeight="Bold" />
        </StackPanel>

        <DockPanel
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            LastChildFill="False">
            <Button
                Width="180"
                Margin="0,3,3,3"
                Click="Extraction_Clicked"
                Content="Extraction"
                DockPanel.Dock="Left" />
            <Button
                Width="180"
                Margin="3,3,0,3"
                Click="Config_Clicked"
                Content="Config"
                DockPanel.Dock="Right" />
        </DockPanel>
        <ScrollViewer Grid.Row="2" Margin="0,12,0,0">
            <ContentControl Content="{Binding}" />
        </ScrollViewer>
        <Label
            Grid.Row="3"
            Content="PM Group"
            FontSize="8" />
    </Grid>
</Window>