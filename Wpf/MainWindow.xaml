<Window
    x:Class="NavisDataExtraction.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NavisDataExtraction.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NavisDataExtraction.Wpf.ViewModels"
    xmlns:views="clr-namespace:NavisDataExtraction.Wpf.Views"
    Title="MainWindow"
    Width="450"
    Height="1000"
    d:DesignHeight="1000"
    d:DesignWidth="450"
    ResizeMode="NoResize"
    mc:Ignorable="d">


    <Window.Resources>
        <DataTemplate x:Name="extractionViewTemplate" DataType="{x:Type viewmodels:ExtractionViewModel}">
            <views:ExtractionView DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Name="editorViewTemplate" DataType="{x:Type viewmodels:EditorViewModel}">
            <views:EditorView DataContext="{Binding}" />
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="900" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentControl
            Grid.Row="0"
            Grid.Column="0"
            Content="{Binding}" />

        <StackPanel Grid.Row="1">
            <Button
                Height="24"
                Click="Extraction_Clicked"
                Content="Extraction" />
            <Button
                Height="24"
                Click="Editor_Clicked"
                Content="Editor" />
        </StackPanel>
    </Grid>
</Window>